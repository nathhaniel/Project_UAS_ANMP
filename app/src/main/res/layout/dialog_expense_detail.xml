<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:layout_margin="24dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDialogDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 Mei 2025 09.45 AM"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDialogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan gojek dari West ke East"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDialogCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/category_background"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDialogAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 88.000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="end"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
